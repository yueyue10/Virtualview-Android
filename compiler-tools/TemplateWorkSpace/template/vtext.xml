<VHLayout flag="flag_exposure|flag_clickable"
    layoutHeight="match_parent"
    layoutWidth="match_parent"
    orientation="V"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: text"
        textColor="#333333"
        textSize="12" />

    <VText layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12" />

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: textSize = 16"
        textColor="#333333"
        textSize="12" />

    <VText layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="16" />

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: textColor = #FF0000"
        textColor="#333333"
        textSize="12" />

    <VText layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#FF0000"
        textSize="12" />

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: textStyle = bold"
        textColor="#333333"
        textSize="12" />

    <VText layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12"
        textStyle="bold" />

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: textStyle = strike"
        textColor="#333333"
        textSize="12" />

    <VText layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12"
        textStyle="strike" />

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: textStyle = italic"
        textColor="#333333"
        textSize="12" />

    <VText layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12"
        textStyle="italic" />

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: borderWidth = 1 borderColor = #0088FF"
        textColor="#333333"
        textSize="12" />

    <VText borderColor="#0088FF"
        borderWidth="1"
        layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12" />

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: borderWidth = 1 borderColor = #0088FF borderRadius = 2"
        textColor="#333333"
        textSize="12" />

    <VText borderColor="#0088FF"
        borderRadius="2"
        borderWidth="1"
        layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12" />

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: gravity = h_center|v_center"
        textColor="#333333"
        textSize="12" />

    <VText borderColor="#0088FF"
        borderWidth="1"
        gravity="h_center|v_center"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12" />

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: background = #008899"
        textColor="#333333"
        textSize="12" />

    <VText background="#008899"
        gravity="h_center|v_center"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12" />
</VHLayout>