<NVHLayout background="#ececec"
    layoutHeight="match_parent"
    layoutWidth="match_parent"
    orientation="V"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <NVHLayout action="action"
        background="#ffffff"
        borderRadius="10rp"
        flag="flag_exposure|flag_clickable"
        layoutHeight="wrap_content"
        layoutMarginLeft="20rp"
        layoutMarginRight="20rp"
        layoutWidth="match_parent"
        orientation="V">

        <NVH2Layout layoutHeight="wrap_content"
            layoutMargin="20rp"
            layoutWidth="match_parent"
            orientation="H">

            <VText id="4"
                layoutGravity="left|v_center"
                layoutHeight="wrap_content"
                layoutWidth="wrap_content"
                text="龙虎山之旅"
                textColor="#000000"
                textSize="14" />

            <VText borderColor="#728ea3"
                borderRadius="5rp"
                borderWidth="1"
                id="6"
                layoutDirection="right"
                layoutGravity="v_center"
                layoutHeight="wrap_content"
                layoutWidth="wrap_content"
                padding="6rp"
                text="未开启"
                textColor="#555555"
                textSize="12" />
        </NVH2Layout>

        <NLine layoutHeight="2rp"
            layoutWidth="match_parent" />

        <NVHLayout layoutHeight="wrap_content"
            layoutWidth="match_parent"
            orientation="H">

            <NImage id="5"
                layoutGravity="v_center|h_center"
                layoutHeight="200rp"
                layoutMargin="20rp"
                layoutWidth="200rp"
                scaleType="center_crop"
                src="${imgUrl}" />

            <NVHLayout layoutGravity="v_center"
                layoutHeight="wrap_content"
                layoutWidth="match_parent"
                orientation="V">

                <VText gravity="v_center|h_center"
                    id="4"
                    layoutGravity="left"
                    layoutHeight="wrap_content"
                    layoutWidth="wrap_content"
                    text="旅行时常8.0小时"
                    textColor="#9e9e9e"
                    textSize="13" />

                <VText gravity="v_center|h_center"
                    id="4"
                    layoutGravity="left"
                    layoutHeight="wrap_content"
                    layoutMarginTop="10rp"
                    layoutWidth="wrap_content"
                    text="9个景点"
                    textColor="#9e9e9e"
                    textSize="13" />

                <NVHLayout layoutHeight="wrap_content"
                    layoutMarginTop="10rp"
                    layoutWidth="match_parent"
                    orientation="H">

                    <VText borderColor="#f95555"
                        borderRadius="3"
                        borderWidth="1"
                        id="6"
                        layoutDirection="right"
                        layoutGravity="v_center"
                        layoutHeight="wrap_content"
                        layoutWidth="wrap_content"
                        padding="3rp"
                        text="经典"
                        textColor="#f95555"
                        textSize="11" />

                    <VText borderColor="#f95555"
                        borderRadius="3"
                        borderWidth="1"
                        id="6"
                        layoutDirection="right"
                        layoutGravity="v_center"
                        layoutHeight="wrap_content"
                        layoutMarginLeft="5"
                        layoutMarginRight="5"
                        layoutWidth="wrap_content"
                        padding="3rp"
                        text="悠闲"
                        textColor="#f95555"
                        textSize="11" />

                    <VText borderColor="#f95555"
                        borderRadius="3"
                        borderWidth="1"
                        id="6"
                        layoutDirection="right"
                        layoutGravity="v_center"
                        layoutHeight="wrap_content"
                        layoutWidth="wrap_content"
                        padding="3rp"
                        text="朋友同行"
                        textColor="#f95555"
                        textSize="11" />
                </NVHLayout>

                <VText gravity="v_center|h_center"
                    id="4"
                    layoutGravity="left"
                    layoutHeight="wrap_content"
                    layoutMarginTop="10rp"
                    layoutWidth="wrap_content"
                    text="出发时间:2018-05-11 14:18"
                    textColor="#9e9e9e"
                    textSize="13" />
            </NVHLayout>
        </NVHLayout>

    </NVHLayout>

</NVHLayout>
