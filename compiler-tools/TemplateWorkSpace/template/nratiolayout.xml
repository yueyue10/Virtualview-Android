<VHLayout background="#FFFFFF"
    layoutHeight="match_parent"
    layoutWidth="750rp"
    orientation="V"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <VText background="#cccccc"
        layoutHeight="20"
        layoutWidth="match_parent"
        paddingLeft="5"
        text="orientation = H"
        textColor="#333333"
        textSize="12" />

    <NRatioLayout borderColor="#FF0000"
        borderWidth="1"
        layoutHeight="100"
        layoutWidth="match_parent"
        orientation="H"
        paddingBottom="1"
        paddingLeft="1"
        paddingRight="1"
        paddingTop="1">

        <VText background="#0000FF"
            gravity="h_center"
            layoutHeight="98"
            layoutRatio="1"
            text="ratio = 1"
            textSize="12" />

        <VText background="#0088FF"
            gravity="h_center"
            layoutHeight="98"
            layoutRatio="1"
            text="ratio = 1"
            textSize="12" />

        <VText background="#8888FF"
            gravity="h_center"
            layoutHeight="98"
            layoutRatio="1"
            text="ratio = 1"
            textSize="12" />
    </NRatioLayout>

    <NRatioLayout borderColor="#FF0000"
        borderWidth="1"
        layoutHeight="100"
        layoutMarginTop="5"
        layoutWidth="match_parent"
        orientation="H"
        paddingBottom="1"
        paddingLeft="1"
        paddingRight="1"
        paddingTop="1">
        <VText background="#0000FF"
            gravity="h_center"
            layoutHeight="98"
            layoutRatio="1"
            text="ratio = 1"
            textSize="12" />

        <VText background="#0088FF"
            gravity="h_center"
            layoutHeight="98"
            layoutRatio="2"
            text="ratio = 2"
            textSize="12" />

        <VText background="#8888FF"
            gravity="h_center"
            layoutHeight="98"
            layoutRatio="3"
            text="ratio = 3"
            textSize="12" />

    </NRatioLayout>

    <NRatioLayout borderColor="#FF0000"
        borderWidth="1"
        layoutHeight="100"
        layoutMarginTop="5"
        layoutWidth="match_parent"
        orientation="H"
        paddingBottom="1"
        paddingLeft="1"
        paddingRight="1"
        paddingTop="1">
        <VText background="#0000FF"
            gravity="h_center"
            layoutHeight="98"
            layoutRatio="1"
            text="ratio = 1"
            textSize="12" />

        <VText background="#0088FF"
            gravity="h_center"
            layoutHeight="98"
            layoutWidth="200"
            text="ratio = 0, width = 200"
            textSize="12" />

        <VText background="#8888FF"
            gravity="h_center"
            layoutHeight="98"
            layoutRatio="1"
            text="ratio = 1"
            textSize="12" />
    </NRatioLayout>

    <NRatioLayout borderColor="#FF0000"
        borderWidth="1"
        layoutHeight="100"
        layoutMarginTop="5"
        layoutWidth="match_parent"
        orientation="H"
        paddingBottom="1"
        paddingLeft="1"
        paddingRight="1"
        paddingTop="1">
        <VText background="#0000FF"
            gravity="h_center"
            layoutHeight="98"
            layoutRatio="1"
            text="ratio = 1"
            textSize="12" />

        <VText background="#0088FF"
            layoutHeight="98"
            layoutWidth="wrap_content"
            paddingLeft="5"
            paddingRight="5"
            text="ratio = 0, width = wrap_content"
            textSize="12" />

        <VText background="#8888FF"
            gravity="h_center"
            layoutHeight="98"
            layoutRatio="1"
            text="ratio = 1"
            textSize="12" />
    </NRatioLayout>

    <VText background="#cccccc"
        layoutHeight="20"
        layoutWidth="match_parent"
        paddingLeft="5"
        text="orientation = V"
        textColor="#333333"
        textSize="12" />

    <NRatioLayout layoutHeight="wrap_content"
        layoutWidth="match_parent"
        orientation="H">

        <NRatioLayout borderColor="#FF0000"
            borderWidth="1"
            layoutHeight="300"
            layoutRatio="1"
            orientation="V"
            paddingBottom="1"
            paddingLeft="1"
            paddingRight="1"
            paddingTop="1">
            <VText background="#0000FF"
                gravity="h_center"
                layoutRatio="1"
                layoutWidth="match_parent"
                text="ratio = 1"
                textSize="12" />

            <VText background="#0088FF"
                gravity="h_center"
                layoutRatio="1"
                layoutWidth="match_parent"
                text="ratio = 1"
                textSize="12" />

            <VText background="#8888FF"
                gravity="h_center"
                layoutRatio="1"
                layoutWidth="match_parent"
                text="ratio = 1"
                textSize="12" />
        </NRatioLayout>

        <NRatioLayout borderColor="#FF0000"
            borderWidth="1"
            layoutHeight="300"
            layoutMarginLeft="20"
            layoutRatio="1"
            orientation="V"
            paddingBottom="1"
            paddingLeft="1"
            paddingRight="1"
            paddingTop="1">
            <VText background="#0000FF"
                gravity="h_center"
                layoutRatio="1"
                layoutWidth="match_parent"
                text="ratio = 1"
                textSize="12" />

            <VText background="#0088FF"
                gravity="h_center"
                layoutRatio="2"
                layoutWidth="match_parent"
                text="ratio = 2"
                textSize="12" />

            <VText background="#8888FF"
                gravity="h_center"
                layoutRatio="3"
                layoutWidth="match_parent"
                text="ratio = 3"
                textSize="12" />
        </NRatioLayout>

        <NRatioLayout borderColor="#FF0000"
            borderWidth="1"
            layoutHeight="300"
            layoutMarginLeft="20"
            layoutRatio="1"
            orientation="V"
            paddingBottom="1"
            paddingLeft="1"
            paddingRight="1"
            paddingTop="1">
            <VText background="#0000FF"
                gravity="h_center"
                layoutRatio="1"
                layoutWidth="match_parent"
                text="ratio = 1"
                textSize="12" />

            <VText background="#0088FF"
                gravity="h_center"
                layoutHeight="200"
                layoutWidth="match_parent"
                text="height = 200"
                textSize="12" />

            <VText background="#8888FF"
                gravity="h_center"
                layoutRatio="1"
                layoutWidth="match_parent"
                text="ratio = 1"
                textSize="12" />
        </NRatioLayout>

        <NRatioLayout borderColor="#FF0000"
            borderWidth="1"
            layoutHeight="300"
            layoutMarginLeft="20"
            layoutRatio="1"
            orientation="V"
            paddingBottom="1"
            paddingLeft="1"
            paddingRight="1"
            paddingTop="1">
            <VText background="#0000FF"
                gravity="h_center"
                layoutRatio="1"
                layoutWidth="match_parent"
                text="ratio = 1"
                textSize="12" />

            <VText background="#0088FF"
                gravity="h_center"
                layoutHeight="wrap_content"
                layoutWidth="match_parent"
                lines="0"
                text="height = wrap_content"
                textSize="12" />

            <VText background="#8888FF"
                gravity="h_center"
                layoutRatio="1"
                layoutWidth="match_parent"
                text="ratio = 1"
                textSize="12" />
        </NRatioLayout>
    </NRatioLayout>

</VHLayout>