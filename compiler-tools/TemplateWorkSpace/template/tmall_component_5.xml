<FrameLayout
    autoDimDirection="X"
    autoDimX="750"
    autoDimY="590"
    dataTag="container"
    layoutHeight="wrap_content"
    layoutWidth="match_parent"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <NImage
        action="action"
        flag="flag_exposure|flag_clickable"
        id="1"
        layoutHeight="match_parent"
        layoutWidth="match_parent"
        src="${bgImgUrl}" />

    <Grid
        colCount="3"
        dataTag="${data}"
        flag="flag_draw"
        id="2"
        itemHorizontalMargin="2"
        layoutGravity="bottom"
        layoutHeight="wrap_content"
        layoutMarginBottom="25rp"
        layoutMarginLeft="25rp"
        layoutMarginRight="25rp"
        layoutWidth="match_parent" />
</FrameLayout>