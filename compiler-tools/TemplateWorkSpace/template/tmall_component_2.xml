<VHLayout
    action="action"
    flag="flag_exposure|flag_clickable"
    layoutHeight="wrap_content"
    layoutWidth="wrap_content"
    orientation="V"
    paddingBottom="10"
    paddingLeft="10"
    paddingRight="10"
    paddingTop="10"
    xmlns="http://schemas.vv.com/apk/res/vv"
>
    <NImage
        id="1"
        layoutGravity="h_center"
        layoutHeight="196rp"
        layoutMarginBottom="6"
        layoutWidth="296rp"
        scaleType="center_crop"
        src="http://news.online.sh.cn/news/gb/content/attachement/jpeg/site1/20180502/IMGf48e389446e847523566649.jpeg" />
    <VText
        id="2"
        layoutGravity="h_center"
        layoutHeight="wrap_content"
        layoutWidth="wrap_content"
        text="${title}"
        textColor="@{${titleColor} ? ${titleColor} : #333333 }"
        textSize="12" />

</VHLayout>
