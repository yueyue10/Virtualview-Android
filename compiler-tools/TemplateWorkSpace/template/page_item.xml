<RatioLayout action="action"
    flag="flag_exposure|flag_clickable"
    layoutHeight="match_parent"
    layoutWidth="wrap_content"
    orientation="V"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <RatioLayout layoutHeight="0"
        layoutMarginBottom="1.5"
        layoutRatio="1"
        layoutWidth="wrap_content"
        orientation="H">
        <VText ellipsize="end"
            id="3"
            layoutGravity="v_center"
            layoutHeight="wrap_content"
            layoutRatio="1"
            layoutWidth="wrap_content"
            text="${title1}"
            textColor="#333333"
            textSize="12" />
    </RatioLayout>

    <RatioLayout gravity="v_center"
        layoutHeight="0"
        layoutMarginTop="1.5"
        layoutRatio="1"
        layoutWidth="wrap_content"
        orientation="H">
        <VText ellipsize="end"
            id="4"
            layoutGravity="v_center"
            layoutHeight="wrap_content"
            layoutRatio="1"
            layoutWidth="wrap_content"
            text="${title2}"
            textColor="#333333"
            textSize="12" />
    </RatioLayout>

</RatioLayout>
