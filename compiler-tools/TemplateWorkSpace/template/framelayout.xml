<VHLayout flag="flag_exposure|flag_clickable"
    layoutHeight="match_parent"
    layoutWidth="match_parent"
    orientation="V"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: overlay"
        textColor="#333333"
        textSize="12" />

    <FrameLayout layoutHeight="200"
        layoutWidth="match_parent">

        <VGraph color="#0000FF"
            diameterX="150"
            diameterY="150"
            layoutHeight="wrap_content"
            layoutWidth="wrap_content"
            type="circle" />

        <VGraph color="#0088FF"
            diameterX="100"
            diameterY="100"
            layoutHeight="wrap_content"
            layoutWidth="wrap_content"
            type="circle" />

        <VGraph color="#8888FF"
            diameterX="50"
            diameterY="50"
            layoutHeight="wrap_content"
            layoutWidth="wrap_content"
            type="circle" />
    </FrameLayout>

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: child layoutGravity = left,right,top,bottom..."
        textColor="#333333"
        textSize="12" />

    <FrameLayout layoutHeight="250"
        layoutWidth="match_parent">
        <VText background="#0000FF"
            gravity="v_center|h_center"
            layoutHeight="150"
            layoutWidth="150"
            text="default position"
            textSize="12" />

        <VText background="#0088FF"
            gravity="v_center|h_center"
            layoutGravity="right"
            layoutHeight="150"
            layoutWidth="150"
            text="layoutGravity=right"
            textSize="12" />

        <VText background="#8888FF"
            gravity="v_center|h_center"
            layoutGravity="right|bottom"
            layoutHeight="150"
            layoutWidth="150"
            text="layoutGravity=right|bottom"
            textSize="12" />

        <VText background="#FF8888"
            gravity="v_center|h_center"
            layoutGravity="left|bottom"
            layoutHeight="150"
            layoutWidth="150"
            text="layoutGravity=left|bottom"
            textSize="12" />

        <VText background="#FF8800"
            gravity="v_center|h_center"
            layoutGravity="v_center|h_center"
            layoutHeight="100"
            layoutWidth="100"
            text="center"
            textSize="12" />
    </FrameLayout>

</VHLayout>