<FrameLayout action="action"
    autoDimDirection="X"
    autoDimX="335"
    autoDimY="639"
    background="#F2F2F2"
    borderColor="#DADBD8"
    borderWidth="1"
    flag="flag_exposure|flag_clickable"
    layoutHeight="wrap_content"
    layoutWidth="345rp"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <NImage layoutHeight="match_parent"
        layoutWidth="match_parent"
        src="${bgImgUrl}" />
    <VHLayout layoutHeight="match_parent"
        layoutWidth="match_parent"
        orientation="V"
        paddingBottom="20"
        paddingLeft="20"
        paddingRight="20"
        paddingTop="20">
        <VH2Layout layoutGravity="h_center"
            layoutHeight="wrap_content"
            layoutWidth="130"
            orientation="H">
            <NLine color="#CBCBCB"
                layoutGravity="left|v_center"
                layoutHeight="2"
                layoutWidth="27" />
            <NText ellipsize="end"
                layoutGravity="v_center"
                layoutHeight="wrap_content"
                layoutWidth="wrap_content"
                lines="1"
                paddingLeft="9"
                paddingRight="9"
                text="${title}"
                textColor="#000000"
                textSize="14"
                textStyle="bold" />
            <NLine color="#CBCBCB"
                layoutDirection="right"
                layoutGravity="right|v_center"
                layoutHeight="2"
                layoutWidth="27" />
        </VH2Layout>

        <NText action="item1Action"
            background="#FFFFFF"
            borderColor="#C7C7C7"
            borderWidth="0.5"
            ellipsize="end"
            flag="flag_exposure|flag_clickable"
            gravity="v_center|h_center"
            layoutGravity="h_center"
            layoutHeight="33"
            layoutMarginTop="24"
            layoutWidth="130"
            lines="1"
            text="${item1Title}"
            textColor="#3D4245"
            textSize="12"
            visibility="@{${item1Title} ? visible : gone }" />
        <NText action="item2Action"
            background="#FFFFFF"
            borderColor="#C7C7C7"
            borderWidth="0.5"
            ellipsize="end"
            flag="flag_exposure|flag_clickable"
            gravity="v_center|h_center"
            layoutGravity="h_center"
            layoutHeight="33"
            layoutMarginTop="15"
            layoutWidth="130"
            lines="1"
            text="${item2Title}"
            textColor="#3D4245"
            textSize="12"
            visibility="@{${item2Title} ? visible : gone }" />
        <NText action="item3Action"
            background="#FFFFFF"
            borderColor="#C7C7C7"
            borderWidth="0.5"
            ellipsize="end"
            flag="flag_exposure|flag_clickable"
            gravity="v_center|h_center"
            layoutGravity="h_center"
            layoutHeight="33"
            layoutMarginTop="15"
            layoutWidth="130"
            lines="1"
            text="${item3Title}"
            textColor="#3D4245"
            textSize="12"
            visibility="@{${item3Title} ? visible : gone }" />
        <NText action="item4Action"
            background="#FFFFFF"
            borderColor="#C7C7C7"
            borderWidth="0.5"
            ellipsize="end"
            flag="flag_exposure|flag_clickable"
            gravity="v_center|h_center"
            layoutGravity="h_center"
            layoutHeight="33"
            layoutMarginTop="15"
            layoutWidth="130"
            lines="1"
            text="${item4Title}"
            textColor="#3D4245"
            textSize="12"
            visibility="@{${item4Title} ? visible : gone }" />
        <NText action="item5Action"
            background="#FFFFFF"
            borderColor="#C7C7C7"
            borderWidth="0.5"
            ellipsize="end"
            flag="flag_exposure|flag_clickable"
            gravity="v_center|h_center"
            layoutGravity="h_center"
            layoutHeight="33"
            layoutMarginTop="15"
            layoutWidth="130"
            lines="1"
            text="${item5Title}"
            textColor="#3D4245"
            textSize="12"
            visibility="@{${item5Title} ? visible : gone }" />

    </VHLayout>

</FrameLayout>
