        text="Title: borderWidth = 1 borderColor = #0088FF"
        textColor="#333333"
        textSize="12" />

    <NText borderColor="#0088FF"
        borderWidth="1"
        layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12" />

    <NText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: borderWidth = 1 borderColor = #0088FF borderRadius = 2"
        textColor="#333333"
        textSize="12" />

    <NText borderColor="#0088FF"
        borderRadius="2"
        borderWidth="1"
        layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12" />


    <NText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: gravity = h_center|v_center"
        textColor="#333333"
        textSize="12" />

    <NText borderColor="#0088FF"
        borderWidth="1"
        gravity="h_center|v_center"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12" />

    <NText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: background = #008899"
        textColor="#333333"
        textSize="12" />

