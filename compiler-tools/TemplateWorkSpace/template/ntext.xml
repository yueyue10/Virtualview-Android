        textSize="12" />

    <NText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: lines = 2 | layoutHeight=20 (layoutHeight > lines)"
        textColor="#333333"
        textSize="12" />

    <NText borderColor="#0088FF"
        borderWidth="1"
        ellipsize="end"
        layoutHeight="20"
        layoutWidth="match_parent"
        lines="2"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="12" />

    <NText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: no lineSpaceMultiplier or lineSpaceExtra"
        textColor="#333333"
        textSize="12" />

    <NText layoutHeight="wrap_content"
        layoutWidth="match_parent"
        text="Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View"
        textColor="#333333"
        textSize="12" />

    <NText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: lineSpaceMultiplier = 2"
        textColor="#333333"
        textSize="12" />

    <NText layoutHeight="wrap_content"
        layoutWidth="match_parent"
        lineSpaceMultiplier="2"
        text="Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View"
        textColor="#333333"
        textSize="12" />

    <NText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: lineSpaceExtra = 10"
        textColor="#333333"
        textSize="12" />

    <NText layoutHeight="wrap_content"
        layoutWidth="match_parent"
        lineSpaceExtra="10"
        text="Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View Hello Virtual View"
        textColor="#333333"
        textSize="12" />

    <NText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: lineSpaceMultiplier | lineSpaceExtra"
        textColor="#333333"
        textSize="12" />

