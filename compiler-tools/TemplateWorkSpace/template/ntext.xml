    layoutWidth="match_parent"
    orientation="V"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <NText action="startActivity"
        background="#008899"
        flag="flag_clickable"
        id="10"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: text"
        textColor="#333333"
        textSize="12" />

    <NText action="toUrl"
        flag="flag_clickable"
        id="11"
        layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View HelloCC"
        textColor="#333333"
        textSize="12" />

    <NText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: textSize = 16"
        textColor="#333333"
        textSize="12" />

    <NText layoutHeight="20"
        layoutWidth="wrap_content"
        text="Hello Virtual View"
        textColor="#333333"
        textSize="16" />

    <NText background="#008899"
        layoutHeight="20"
