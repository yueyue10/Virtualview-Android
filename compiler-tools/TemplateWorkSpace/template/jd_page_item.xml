<VHLayout action="action"
    flag="flag_exposure|flag_clickable"
    layoutGravity="v_center"
    layoutHeight="wrap_content"
    layoutWidth="wrap_content"
    orientation="H"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <VText ellipsize="end"
        id="3"
        layoutHeight="wrap_content"
        layoutWidth="wrap_content"
        text="${hot_text}"
        textColor="#DA5C5D"
        textSize="14" />

    <VText ellipsize="end"
        layoutHeight="wrap_content"
        layoutWidth="wrap_content"
        text="${content}"
        textColor="#333333"
        textSize="14" />
</VHLayout>
