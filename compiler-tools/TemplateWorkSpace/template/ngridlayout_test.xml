<VHLayout background="#ffffff"
    flag="flag_exposure|flag_clickable"
    layoutHeight="match_parent"
    layoutWidth="match_parent"
    orientation="V"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <VText background="#008899"
        layoutHeight="20"
        layoutWidth="match_parent"
        text="Title: colCount = 2"
        textColor="#333333"
        textSize="12" />

    <NGridLayout background="#00cccc"
        colCount="1"
        layoutHeight="wrap_content"
        layoutMargin="${style{margin}}"
        layoutMarginBottom="10"
        layoutMarginLeft="10"
        layoutMarginRight="10"
        layoutMarginTop="10"
        layoutWidth="match_parent"
        paddingBottom="20"
        paddingLeft="20"
        paddingRight="20"
        paddingTop="20">

        <VText background="#0000FF"
            gravity="v_center|h_center"
            layoutHeight="150"
            layoutWidth="match_parent"
            text="singlecolumn"
            textSize="15" />
    </NGridLayout>

    <NGridLayout background="#00cccc"
        colCount="2"
        itemHorizontalMargin="10"
        itemVerticalMargin="10"
        layoutHeight="wrap_content"
        layoutMarginBottom="10"
        layoutMarginLeft="10"
        layoutMarginRight="10"
        layoutMarginTop="0"
        layoutWidth="match_parent">

        <VText background="#0000FF"
            gravity="v_center|h_center"
            layoutHeight="150"
            layoutWidth="match_parent"
            text="column1"
            textSize="15" />
        <VText background="#0000FF"
            gravity="v_center|h_center"
            layoutHeight="150"
            layoutWidth="match_parent"
            text="column2"
            textSize="15" />
    </NGridLayout>

    <NGridLayout background="#00cccc"
        colCount="3"
        itemHorizontalMargin="10"
        itemVerticalMargin="10"
        layoutHeight="wrap_content"
        layoutMarginBottom="10"
        layoutMarginLeft="10"
        layoutMarginRight="10"
        layoutMarginTop="0"
        layoutWidth="match_parent">

        <VText background="#0000FF"
            gravity="v_center|h_center"
            layoutHeight="150"
            layoutWidth="match_parent"
            text="itme1"
            textSize="15" />
        <VText background="#0000FF"
            gravity="v_center|h_center"
            layoutHeight="150"
            layoutWidth="match_parent"
            text="itme2"
            textSize="15" />
        <VText background="#0000FF"
            gravity="v_center|h_center"
            layoutHeight="150"
            layoutWidth="match_parent"
            text="itme3"
            textSize="15" />
    </NGridLayout>
    <VText
        gravity="h_center|v_center"
        layoutHeight="wrap_content"
        layoutWidth="match_parent"
        padding="10"
        text="RecyclerView"
        textColor="#000000"
        textSize="15" />
    <NGridLayout
        background="#B8E986"
        colCount="2"
        layoutHeight="wrap_content"
        layoutWidth="match_parent"
        padding="10">
        <VText
            background="#F5A623"
            borderColor="#9E9E96"
            borderWidth="1"
            gravity="h_center|v_center"
            layoutHeight="150"
            layoutWidth="match_parent"
