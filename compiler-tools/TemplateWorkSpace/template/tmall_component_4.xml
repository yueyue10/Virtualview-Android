<VHLayout
    action="action"
    background="#FFFFFF"
    flag="flag_exposure|flag_clickable"
    gravity="v_center"
    layoutHeight="wrap_content"
    layoutWidth="80"
    orientation="v"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <FrameLayout
        layoutHeight="wrap_content"
        layoutMarginTop="5"
        layoutWidth="match_parent">
        <NImage
            layoutGravity="h_center"
            layoutHeight="80"
            layoutWidth="80"
            paddingBottom="@{${hasImgPadding} ? 10 : 0 }"
            paddingLeft="@{${hasImgPadding} ? 10 : 0 }"
            paddingRight="@{${hasImgPadding} ? 10 : 0 }"
            paddingTop="@{${hasImgPadding} ? 10 : 0 }"
            src="https://gw.alicdn.com/tfs/TB1rLhpSpXXXXcOaFXXXXXXXXXX-160-156.png" />
        <NText
            background="#FF0036"
            gravity="v_center"
            layoutGravity="bottom|h_center"
            layoutHeight="15"
            layoutMarginBottom="-7.5"
            layoutWidth="wrap_content"
            lines="1"
            paddingLeft="3"
            paddingRight="3"
            text="仅剩5件"
            textColor="@{${titleColor} ? ${titleColor} : #FFFFFF }"
            textSize="10"
            visibility="visible" />
    </FrameLayout>
    <VText
        background="#FF0036"
        gravity="v_center"
        layoutGravity="h_center"
        layoutHeight="wrap_content"
        layoutMarginBottom="5"
        layoutMarginTop="9"
        layoutWidth="wrap_content"
        lines="1"
        paddingLeft="3"
        paddingRight="3"
        text="89.88"
        textColor="@{${priceColor} ? ${priceColor} : #231F1F }"
        textSize="16" />
</VHLayout>
